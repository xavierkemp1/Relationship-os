{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Permissions for the main window",
  "windows": ["main"],
  "permissions": [
    "core:event:default",
    "core:window:default",
    "core:app:default",
    "core:resources:default",

    "fs:default",
    "fs:allow-create-dir",
    "fs:allow-write-file",
    "fs:allow-appdata-write",
    "fs:allow-appdata-write-recursive",

    "sql:allow-load",
    "sql:allow-select",
    "sql:allow-execute",
    "sql:allow-close"
  ]
}
